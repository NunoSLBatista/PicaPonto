<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.picaponto.app.OptionsActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="3dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/picagensBtn"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#343739"
            android:text="Picagens"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/scheduleBtn"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#343739"
            android:text="Horário"
            android:textColor="#FFFFFF"
            android:textSize="20sp"></Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/manualBtn"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#343739"
            android:gravity="center"
            android:text="Picagem Manual"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/vacationsBtn"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#343739"
            android:text="Férias"
            android:textColor="#FFFFFF"
            android:textSize="20sp"></Button>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondLinear">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#9AAAB5"
            android:text="Voltar"
            android:textColor="#FFFFFF"
            android:textSize="20sp"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>